{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}

